<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnChangeDate"
        android:text="View A Different Date"/>

    <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:id="@+id/scheduleTable"
        android:src="@drawable/tableplaceholder"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="MOVE TO REGULAR VOLUNTEER MENU"
            android:id="@+id/btnMoveToRegularVolunteerTimeTable"
            android:gravity="center_vertical"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/btnMoveToEditTime"
            android:text="EDIT TIME TABLE"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>
